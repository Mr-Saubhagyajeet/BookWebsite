<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width , intial-scale = 1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" >
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    @RenderSection("css",required:false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 d-flex">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img class="logo-image" alt="Brand logo" src="~/img/logo.png" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-xs-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="AboutUs" >About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Book" asp-action="AllBooks">AllBooks</a>
                        </li>
                        <li class="d-block d-sm-none pb-1">
                            <a class="nav-link text-center text-bg-primary fw-bold" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                        <li class="d-block d-sm-none">
                            <a class="nav-link text-center text-bg-success fw-bold" asp-controller="Home" asp-action="Signup">Signup</a>
                        </li>
                    </ul>
                    <div class="text-end d-none d-sm-block">
                        <a class="btn btn-outline-primary fw-bold mx-1" asp-controller="Home" asp-action="Login">Login</a>
                        <a class="btn btn-success fw-bold" asp-controller="Home" asp-action="Signup">Signup</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="common-body">
        @RenderBody()
    </div>
    <footer class="bg-dark-subtle border-top text-muted footer">
        <div class="container" style="padding-left:25px">
            &copy; @DateTime.Now.Year ABC Book Store
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js">
    </script>
    @RenderSection("scripts",required:false)
</body>
</html>
