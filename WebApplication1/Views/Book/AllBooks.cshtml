@model IEnumerable<BookStoreApplicationOriginal.Models.BooksModel>
@{
    ViewData["Title"] = "All Books";
}
<div class="container">
    <h1 class=" container-fluid text-decoration-underline">All Books</h1>
    <div class="py-4">
        <div class="container">
            <div class="row">
                @foreach(var allthebook in Model)
                {
                    <div class="col-md-3">
                        <div class="card mb-4 shadow-sm ">
                            <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [100%x225]" style="height:275px; width: 100%; display: block;" src="@allthebook.ImagePath" data-holder-rendered="true">
                            <div class="card-body">
                                <p class="h4 fw-bold text-primary text-truncate ">@allthebook.Title</p>
                                <p class="small text-secondary fw-bold text-truncate">@allthebook.Author</p>
                                <p class="card-text text-truncate ">@allthebook.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-secondary" asp-controller="Book" asp-action="GetBooks" asp-route-id="@allthebook.Id">
                                            View
                                        </a>
                                        <a class="btn btn-sm btn-secondary">
                                            Edit
                                        </a>
                                    </div>
                                    <small class="text-black fw-bold">Rs @allthebook.Amount</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
